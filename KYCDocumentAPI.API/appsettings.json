{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=KYCDocumentDB;Username=postgres;Password=admin"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/kyc-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "FileStorage": {
    "BasePath": "wwwroot/uploads",
    "MaxFileSizeInMB": 10,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".pdf" ]
  },
  "MLModels": {
    "DocumentClassifierPath": "ML/Models/document_classifier.zip",
    "FraudDetectionPath": "ML/Models/fraud_detection.zip"
  }
}