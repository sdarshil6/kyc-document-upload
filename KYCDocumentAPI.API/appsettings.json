{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=KYCDocumentDB;Username=postgres;Password=admin;Port=5433"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "FileStorage": {
    "BasePath": "wwwroot/uploads",
    "MaxFileSizeInMB": 10,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".pdf" ]
  },
  "MLModels": {
    "DocumentClassifierPath": "ML/Models/document_classifier.zip",
    "FraudDetectionPath": "ML/Models/fraud_detection.zip"
  },
  "OCRSettings": {
    "TesseractDataPath": "tessdata",
    "DefaultLanguages": [ "eng", "hin", "guj" ],
    "ProcessingTimeout": 30000,
    "MaxRetries": 3,
    "PreprocessImages": true,
    "EnableParallelProcessing": true,
    "CacheResults": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/kyc-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      }
    ]
  }
}